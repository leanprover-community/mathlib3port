        rw [‚Üê vu]
        exact @MeasurableSet.sUnion Œ± (generate_from s) _ hv fun x xv => ih _ (vf xv))
    (generate_from_le fun u hu =>
      GenerateMeasurable.basic _ <| show t.IsOpen u by rw [hs] <;> exact generate_open.basic _ hu)
