| x, 0 => 0
| x, n+1 =>
  let y := x - appr x n 
  if hy : y = 0 then appr x n else
    let u := unit_coeff hy 
    appr x n+(p^n)*(to_zmod ((u : ℤ_[p])*p^(y.valuation - n).natAbs)).val

