  to_zmod_hom p zmod_repr
    (by 
      rw [←maximal_ideal_eq_span_p]
      exact sub_zmod_repr_mem)
    (by 
      rw [←maximal_ideal_eq_span_p]
      exact zmod_congr_of_sub_mem_max_ideal)

