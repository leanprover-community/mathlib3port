  (h₂ : aeval pb'.gen (minpoly A pb.gen) = 0) (f : Polynomial A) :
  pb.equiv_of_root pb' h₁ h₂ (aeval pb.gen f) = aeval pb'.gen f :=
  pb.lift_aeval _ h₂ _

